{
  "name": "8base-starter",
  "version": "1.1.0",
  "description": "8base Custom Logic",
  "scripts": {
    "build": "tsc || echo done",
    "deploy": "8base deploy",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "npx husky install",
    "test": "jest",
    "generate": "graphql-codegen --config codegen.yml -r dotenv/config"
  },
  "dependencies": {
    "8base-cli-types": "^0.3.3",
    "graphql": "^15.7.2",
    "jest": "^26.6.3",
    "path": "^0.12.7",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/typed-document-node": "^2.2.1",
    "@graphql-codegen/typescript": "^2.4.1",
    "@graphql-codegen/typescript-operations": "^2.2.1",
    "@graphql-typed-document-node/core": "^3.1.1",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/parser": "^5.6.0",
    "8base-cli": "0.0.109",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsdoc": "^33.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^10.5.4",
    "prettier": "^2.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(android|ios|node_modules)/"
    ],
    "testRegex": [
      ".test.ts$",
      ".test.tsx$"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
