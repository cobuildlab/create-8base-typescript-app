{
  "name": "8baseStarter",
  "version": "1.0.0",
  "description": "8base Custom Logic",
  "scripts": {
    "deploy": "8base deploy",
    "test": "jest",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "build": "tsc || echo done"
  },
  "dependencies": {
    "8base-cli-types": "^0.3.3",
    "eslint": "^7.25.0",
    "graphql-request": "^1.6.0",
    "jest": "^26.6.3",
    "path": "^0.12.7",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsdoc": "^33.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(android|ios|node_modules)/"
    ],
    "testRegex": [
      ".test.ts$",
      ".test.tsx$"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
